# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=TBDev
DB_USER=root
DB_PASS=

# Application
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_NAME=TorrentBits

# Security
JWT_SECRET=change-this-to-a-random-secret-key-min-32-chars
JWT_EXPIRY=86400
SESSION_LIFETIME=7200
# Set to true only if behind a trusted reverse proxy (nginx, CloudFlare, etc.)
# When false, only REMOTE_ADDR is used for client IP (cannot be spoofed)
TRUST_FORWARDED_HEADERS=false

# SMTP Mail Settings
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=user@email.net
MAIL_PASS=password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME=TorrentBits

# File Uploads
MAX_TORRENT_SIZE=1048576
TORRENT_DIR=./torrents

# Tracker Settings
ANNOUNCE_INTERVAL=1800
SIGNUP_TIMEOUT=259200
MAX_DEAD_TORRENT_TIME=21600

# Site Settings
SITE_ONLINE=1
MAX_USERS=5000
MIN_VOTES=1

# Cache (Redis)
CACHE_DRIVER=redis
CACHE_HOST=127.0.0.1
CACHE_PORT=6379
CACHE_PASSWORD=
CACHE_DATABASE=0
CACHE_ENABLED=true

# Two-Factor Authentication
TWO_FACTOR_ISSUER=TorrentBits


